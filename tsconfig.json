{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["dom", "es2018", "es5"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "experimentalDecorators": true,

    "incremental": true,
    "outDir": "./.ts"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
